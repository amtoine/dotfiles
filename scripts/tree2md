name=$(pwd | rev | cut -d'/' -f1 | rev)
tree -p --filelimit 29 -L 3 | sed "s/^\./ğŸ“¦ $name/g; \
                                   s/â”œ/â”£/g; \
                                   s/â”€ \[d.*\] / ğŸ“‚/g; \
                                   s/â”€ \[-.*\] / ğŸ“œ/g; \
                                   s/â”€ \[l.*\] / ğŸ“œ/g; \
                                   s/â”€/â”/g; \
                                   s/â”‚/â”ƒ/g; \
                                   s/â””/â”—/g; \
                                   s/â”ƒ\s\s\s/\s\s\s\s\s\s/g; \
                                   s/$/  /g" \
                               > tree.md
